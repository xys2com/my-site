{
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "resolveJsonModule": true,
    "strictFunctionTypes": false,
    "esModuleInterop": true,
    "jsx": "preserve",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowJs": true,
    "types": ["vite/client", "node"],
    "lib": ["esnext", "dom", "dom.iterable"],
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"]
}
